pipeline {
    agent any
    tools {
        jdk 'jdk21'
        gradle 'gradle8.6'
    }

    environment {
            JAVA_HOME = "${tool 'jdk21'}"
            GRADLE_HOME = "${tool 'gradle8.6'}"
            PATH = "${env.PATH}:${env.GRADLE_HOME}/bin:${env.JAVA_HOME}/bin"
    }

    parameters {
            string(name: 'ENVIRONMENT_NAME', defaultValue: 'QA-LOCAL', description: 'Environment to run tests against')
            string(name: 'CUCUMBER_TAGS', defaultValue: '@regression', description: 'Cucumber tags to include in the test run')
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Checking out code..'
                deleteDir()
                git url: 'https://github.com/mabalderramav/MDEISV2E4-APCC-Automation.git', branch: 'main'
            }
        }
        stage('Run API Tests') {
            steps {
                script {
                    echo 'Running API tests...'
                    bat "gradle.bat executeMedeisv2e4ApccApiFeature -DenvironmentName=${params.ENVIRONMENT_NAME} -DcucumberTags=${params.CUCUMBER_TAGS}"
                }
            }
        }
    }
}